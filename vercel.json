{
	"version": 2,
	"buildCommand": "cd client && npm install && npm run build && cd ../server && npm install",
	"outputDirectory": "client/dist",
	"builds": [
		{
			"src": "server/server.js",
			"use": "@vercel/node"
		}
	],
	"rewrites": [
		{
			"source": "/graphql(.*)",
			"destination": "server/server.js"
		},
		{
			"source": "/api/(.*)",
			"destination": "server/server.js"
		},
		{
			"source": "/(.*)",
			"destination": "client/dist/$1"
		}
	]
}
